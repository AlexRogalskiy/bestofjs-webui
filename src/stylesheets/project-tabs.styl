// Tab used in `ProjectView` component to navigate between
// README.md, LINKS and REVIEWS views

.project-tabs-header
  display: flex
  margin-bottom: -1px
  > div
    flex: 1
    text-align: center
    padding: 0.5rem 0
    &.active
      border: 1px solid #ccc
      border-bottom-color: white
      background-color: white
      z-index: 1
    a
      display: block
      &:hover
        text-decoration: none

.project-tabs-content
  background-color white
  border 1px solid $cardBorderColor
  .inner
    padding 1rem
  .delta-bar-container
    margin: 0 -1rem

  .project-link, .project-review-item
    border-top: 1px dashed $cardBorderColor
    padding: 1rem 0
    &:last-child
      border-bottom: 1px dashed $cardBorderColor
    .project-link-date, project-review-date
      font-size: 13px
    a:hover
      text-decoration: none
    .project-link-title
      font-size: 1.2rem
  .inner.github, .inner.tags
    border-top 1px dashed $cardBorderColor
