.card
  margin-bottom: 15px;
  padding: 0;
  background-color: white;
  vertical-align: top;
  border: 1px solid #cbcbcb;
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16);
  .octicon
    width: 20px
    text-align: left

.description
  display block
  margin 1em 0
  color #555
  &:hover
    text-decoration none
    color: inherited

//Color for font-icons used in project page ("book" and "quote" icons)
.project-page
  .icon
    color: #999

.readme
  background-color white
  border 1px solid #ccc
  .header
    padding 0.5em 1.5em
    border-bottom 1px solid #ccc
  .body
    padding 1.5em
  .footer
    padding 1.5em
    border-top 1px solid #ccc
  //Attempt to split long lines of code inside readme section (TODO: fix it!)
  pre code
    word-break break-all
  h1
    font-size 36px
  h2
    font-size 28px
  h3
    font-size 22px
  ul, ol
    padding-left 20px
    font-size 13px
  img
    max-width 100%
